<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".activities.TeacherProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            app:cardCornerRadius="1000dp">
            <ImageView
                android:id="@+id/iv_reviewerProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/person_icon24px"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_reviewerName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:text="Elazar Halperin"
            android:textSize="@dimen/_18ssp"
            android:fontFamily="@font/feather_bold"
            android:textColor="@color/black_text_color"
            android:ellipsize="end"
            android:layout_margin="4dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="120dp"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:gravity="center"
        android:orientation="horizontal">
        <RatingBar
            android:id="@+id/rb_teacherRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:numStars="5"
            android:rating="5"
            android:clickable="false"/>
        <TextView
            android:id="@+id/tv_reviewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12/03/2027"
            android:fontFamily="@font/feather_bold"
            android:gravity="center|end"
            android:textColor="@color/gray_text_color"
            android:layout_weight="1"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xiphiass sunt gabaliums de magnum danista.Everything we do is connected with politics: purpose, peace, mineral, truth.Parss volare in barbatus oenipons!Adgiums crescere in oenipons!"
        android:textSize="@dimen/_14ssp"
        android:layout_margin="8dp"
        android:fontFamily="@font/feather_bold"
        android:textColor="@color/gray_text_color" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

</LinearLayout>
