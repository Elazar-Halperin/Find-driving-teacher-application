<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cv_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="2dp"
    app:cardBackgroundColor="@color/background_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:backgroundTint="@color/shimmer_color"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="@color/shimmer_color"
            app:cardCornerRadius="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/iv_teacherProfile"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_120sdp"
                    android:background="@color/shimmer_color"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_teacherName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@color/shimmer_color"
                android:fontFamily="@font/feather_bold"
                android:text=" "
                android:textColor="@color/black_text_color"
                android:textSize="@dimen/_18ssp"
                android:textStyle="bold"
                android:transitionName="teacherName" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="8dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="horizontal"
                android:transitionName="teacherLocations">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@color/shimmer_color" />

                <TextView
                    android:id="@+id/tv_teacherLocations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmer_color"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/feather_bold"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/_14ssp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="horizontal"
                android:transitionName="teacherLocations">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@color/shimmer_color" />

                <TextView
                    android:id="@+id/tv_teacherLocations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmer_color"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/feather_bold"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/_14ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="horizontal"
                android:transitionName="teacherLocations">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@color/shimmer_color" />

                <TextView
                    android:id="@+id/tv_teacherLocations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmer_color"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/feather_bold"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/_14ssp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="horizontal"
                android:transitionName="teacherLocations">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@color/shimmer_color" />

                <TextView
                    android:id="@+id/tv_teacherLocations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/shimmer_color"
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/feather_bold"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text=""
                    android:textSize="@dimen/_14ssp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>