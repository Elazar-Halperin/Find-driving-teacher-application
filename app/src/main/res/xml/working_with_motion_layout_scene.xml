<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/cardView3"
            motion:touchAnchorSide="top"
            motion:maxVelocity="1.07"
            motion:maxAcceleration="0.1"
            motion:springStopThreshold="0.253" />

    </Transition>

    <ConstraintSet android:id="@+id/start">


        <Constraint
            android:id="@+id/iv_teacherProfile"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_350sdp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/fab_messageTeacher"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            android:visibility="visible"
            android:layout_marginEnd="24dp"
            android:scaleY="0.5"
            android:scaleX="0.5"
            motion:transitionEasing="cubic(0.27,0.31,0.8,0.8)"
            android:translationY="100dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="@dimen/_80sdp"
            android:layout_width="match_parent"
            android:id="@+id/iv_teacherProfile"
            motion:transitionEasing="cubic(0.2,0.18,0.8,0.8)"
            android:alpha="0.5" />
        <Constraint
            android:id="@+id/fab_messageTeacher"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="24dp"
            android:visibility="visible"
            android:translationY="0dp"
            android:scaleY="1.2"
            android:scaleX="1.2"
            android:layout_marginEnd="24dp"
            motion:transitionEasing="cubic(0.49,0.26,0.63,0.91)" />

    </ConstraintSet>
</MotionScene>