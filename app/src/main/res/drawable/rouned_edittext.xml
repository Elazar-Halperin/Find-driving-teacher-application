<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_text_color" />
            <corners android:radius="27.5dp" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="1dp"
        android:top="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_dark" />
            <corners android:radius="27.5dp" />
            <stroke
                android:width="0.5dp"
                android:color="#66000000" />
        </shape>
    </item>
</layer-list>